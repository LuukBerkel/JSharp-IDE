<Window x:Class="JSharp_IDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSharp_IDE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Top">
            <Button Content="Run" Width="Auto">
                
            </Button>
        </StackPanel>

        <TreeView DockPanel.Dock="Left">
            
        </TreeView>
        <TabControl Width="Auto">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    <RichTextBox DataObject.Pasting="CodeTextBox_Pasting" TextChanged="CodeTextBox_TextChanged" KeyDown="CodeTextBox_KeyDown" FontFamily="Consolas" Background="#FF272727" AcceptsTab="False" Foreground="White">
                        <RichTextBox.Resources>
                            <Style TargetType="{x:Type Paragraph}">
                                <Setter Property="Margin" Value="0" />
                            </Style>
                        </RichTextBox.Resources>
                    </RichTextBox>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5">
                    
                </Grid>
            </TabItem>
        </TabControl>

    </DockPanel>
</Window>
