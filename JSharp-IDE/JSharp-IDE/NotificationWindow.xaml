<Window
    x:Class="JSharp_IDE.NotificationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  Title="Notification Popup" Width="300" SizeToContent="Height"
  WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <Grid RenderTransformOrigin="0,1" >


        <Border BorderThickness="1" Background="White" BorderBrush="Black" CornerRadius="10">
            <StackPanel Margin="5">
                <TextBlock TextWrapping="Wrap" Margin="5" Name="notification" Height="53">
          <Bold>Notification data</Bold><LineBreak />
          Something just happened and you are being notified of it.
                </TextBlock>

            </StackPanel>
        </Border>

    </Grid>

</Window>
